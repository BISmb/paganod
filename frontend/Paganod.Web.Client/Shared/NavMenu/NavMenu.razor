@namespace Paganod.Web.Client.Shared

@inherits FluxorComponent

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Paganod.Web.Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="config/schema/new">
                <span class="oi oi-list-rich" aria-hidden="true"></span> New Schema
            </NavLink>
        </div>

        @if (MetadataState.Value.SchemaModelsMetadata is not null)
        {
            @foreach(var schema in MetadataState.Value.SchemaModelsMetadata)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@schema.TableConfigNavigationLink" style="overflow: hidden; white-space: nowrap;">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> @schema.TableConfigNavigationLink
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="@schema.TableDataNavigationLink">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> @schema.TableDataNavigationLink
                    </NavLink>
                </div>
            }
        }
    </nav>
</div>
